<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IngredientsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="Ingredients"
            android:background="@android:color/holo_blue_light"
            android:hint="Ingredient"
            android:inputType="text"
            android:minHeight="100dp"
            android:padding="8dp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autofillHints="Quantity"
            android:background="@android:color/holo_blue_light"
            android:inputType="text"
            android:minHeight="100dp"
            android:padding="8dp"
            android:hint="Quantity"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/buttonAddIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Ingredient"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonUpdateIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonAddIngredient"
            android:layout_gravity="center"
            android:text="Update Ingredient"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonDeleteIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonUpdateIngredient"
            android:layout_gravity="center"
            android:text="Delete Ingredient"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonViewIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonDeleteIngredient"
            android:layout_gravity="center"
            android:text="View Ingredients"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonClearIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonViewIngredient"
            android:layout_gravity="center"
            android:text="Clear Ingredients"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15sp"
            android:layout_below="@+id/buttonClearIngredient"
            android:layout_gravity="center"/>

    </LinearLayout>

